{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "backend/src",
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "backend/src/**/*"
    ],
    "exclude": [
        "backend/node_modules",
        "dist"
    ]
}